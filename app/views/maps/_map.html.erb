<div id="<%= dom_id map %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Id:</strong>
    <%= map.id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= map.name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this map", map, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this map", edit_map_path(map), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
