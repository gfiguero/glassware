<tr class="table-row">
  <td class="table-cell"><%= test_tag.id %></td>
  <td class="table-cell"><%= test_tag.name %></td>
  <td class="table-actions">
    <%= link_to raw(icon('show', 'w-4 h-4')), test_tag, class: "button-row button-show", data: {'tooltip-target': "tooltip-show_#{test_tag.id}", 'tooltip-placement': "left"} %>
    <div id="tooltip-show_<%= test_tag.id %>" role="tooltip" class="button-tooltip invisible transition-opacity duration-300 opacity-0 tooltip"><%= I18n.t('test_tags.actions.show', id: test_tag.id) %><div class="tooltip-arrow" data-popper-arrow></div></div>
    <%= link_to raw(icon('edit', 'w-4 h-4')), edit_test_tag_path(test_tag), class: "button-row button-edit", data: {'tooltip-target': "tooltip-edit_#{test_tag.id}", 'tooltip-placement': "left"} %>
    <div id="tooltip-edit_<%= test_tag.id %>" role="tooltip" class="button-tooltip invisible transition-opacity duration-300 opacity-0 tooltip"><%= I18n.t('test_tags.actions.edit', id: test_tag.id) %><div class="tooltip-arrow" data-popper-arrow></div></div>
    <%= link_to raw(icon('delete', 'w-4 h-4')), test_tag, class: "button-row button-delete", method: :delete, data: {'tooltip-target': "tooltip-delete_#{test_tag.id}", 'tooltip-placement': "left"} %>
    <div id="tooltip-delete_<%= test_tag.id %>" role="tooltip" class="button-tooltip invisible transition-opacity duration-300 opacity-0 tooltip"><%= I18n.t('test_tags.actions.delete', id: test_tag.id) %><div class="tooltip-arrow" data-popper-arrow></div></div>
  </td>
</tr>
