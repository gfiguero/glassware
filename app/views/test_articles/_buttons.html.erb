<div class="button-container">

  <% if %w[index].include? action_name %>
    <%= button_tag raw(icon('filter') + icon_text(I18n.t('test_articles.actions.filter'))), name: 'filter', type: 'button', class: "button-filter", data: { 'drawer-target': "drawer-filter", 'drawer-show': "drawer-filter", 'aria-controls': "drawer-filter" } %>
  <% end %>

  <% unless %w[index].include? action_name %>
    <%= link_to raw(icon('back') + icon_text(I18n.t('test_articles.actions.index'))), test_articles_path, class: "button-general" %>
  <% end %>

  <% unless %w[new create edit update].include? action_name %>
    <%= link_to raw(icon('new') + icon_text(I18n.t('test_articles.actions.new'))), new_test_article_path, class: "button-new" %>
  <% end %>

  <% unless %w[new create edit update index].include? action_name %>
    <%= link_to raw(icon('edit') + icon_text(I18n.t('test_articles.actions.edit'))), edit_test_article_path(@test_article), class: "button-edit" %>
  <% end %>

  <% unless %w[new create edit update index].include? action_name %>
    <%= button_tag raw(icon('delete') + icon_text(I18n.t('test_articles.actions.delete'))), type: "button", class: "button-delete", data: {'modal-target': "deleteModal", 'modal-toggle': "deleteModal"} %>

    <div id="deleteModal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-modal md:h-full">
      <div class="relative p-4 w-full max-w-md h-full md:h-auto">
        <div class="relative p-4 text-center bg-white rounded-lg shadow sm:p-5">
          <%= button_tag raw(icon('close', 'w-3 h-3')), name: 'filter', type: 'button', class: "button-close", data: { 'modal-toggle': "deleteModal" } %>
          <%= icon('delete', 'text-gray-400 dark:text-gray-500 w-11 h-11 mb-3.5 mx-auto') %>
          <p class="mb-4 text-gray-500 dark:text-gray-300">Are you sure you want to delete this item?</p>
          <div class="flex justify-center items-center space-x-4">
            <%= button_tag 'Cancelar', type: 'button', class: 'py-2 px-3 text-sm font-medium text-gray-500 bg-white rounded-lg border border-gray-200 hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-primary-300 hover:text-gray-900 focus:z-10 dark:bg-gray-700 dark:text-gray-300 dark:border-gray-500 dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-gray-600', data: {'modal-toggle': "deleteModal"} %>
            <%= link_to raw(icon_text(I18n.t('test_articles.actions.delete'))), test_article_path(@test_article), class: "button-danger", data: { turbo_method: :delete } %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

</div>
