<%= form_tag profiles_path, method: :get do %>

  <div class="my-5">
    <%= label_tag :id %>
    <%= text_field_tag :id, params[:id], class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= label_tag :name %>
    <%= text_field_tag :name, params[:name], class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-8">
    <%= submit_tag I18n.t('profiles.actions.filter'), class: "text-center items-center rounded-lg py-3 px-5 bg-blue-500 hover:bg-blue-600 text-white block font-medium w-full" %>
  </div>

  <div class="my-8">
    <%= link_to profiles_path, class: "text-center items-center rounded-lg py-3 px-5 bg-blue-500 hover:bg-blue-600 text-white block font-medium w-full" do %>
      <%= I18n.t('profiles.actions.clean') %>
    <% end %>
  </div>

<% end %>
