<tr class="table-row">
  <td class="table-cell"><%= test_post.id %></td>
  <td class="table-actions">
    <%= link_to raw(icon('show', 'w-4 h-4')), test_post, class: "button-row button-show", data: {'tooltip-target': "tooltip-show_#{test_post.id}", 'tooltip-placement': "left"} %>
    <div id="tooltip-show_<%= test_post.id %>" role="tooltip" class="button-tooltip invisible transition-opacity duration-300 opacity-0 tooltip"><%= I18n.t('test_posts.actions.show', id: test_post.id) %><div class="tooltip-arrow" data-popper-arrow></div></div>
    <%= link_to raw(icon('edit', 'w-4 h-4')), edit_test_post_path(test_post), class: "button-row button-edit", data: {'tooltip-target': "tooltip-edit_#{test_post.id}", 'tooltip-placement': "left"} %>
    <div id="tooltip-edit_<%= test_post.id %>" role="tooltip" class="button-tooltip invisible transition-opacity duration-300 opacity-0 tooltip"><%= I18n.t('test_posts.actions.edit', id: test_post.id) %><div class="tooltip-arrow" data-popper-arrow></div></div>
    <%= link_to raw(icon('delete', 'w-4 h-4')), test_post, class: "button-row button-delete", method: :delete, data: {'tooltip-target': "tooltip-delete_#{test_post.id}", 'tooltip-placement': "left"} %>
    <div id="tooltip-delete_<%= test_post.id %>" role="tooltip" class="button-tooltip invisible transition-opacity duration-300 opacity-0 tooltip"><%= I18n.t('test_posts.actions.delete', id: test_post.id) %><div class="tooltip-arrow" data-popper-arrow></div></div>
  </td>
</tr>
